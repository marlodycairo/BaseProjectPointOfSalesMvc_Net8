@using BaseProjectMvc_Net8.Data.Entities
@model BaseProjectMvc_Net8.Data.Entities.Category


<div class="container">
    <div class="text-center">
        <h4 class="display-3">Edit</h4>
    </div>
    <form method="post" asp-action="Edit" asp-controller="Category">
        <div>
            <label>Category Name</label>
            <input type="text" name="category_name" value="@Model.Category_Name" />
        </div>
        <div>
            <input type="submit" value="Edit" />
        </div>
    </form>
</div>
<div class="m-3">
    @Html.ActionLink("Back to Categories", "Index", "Category", null, new { @class = "btn btn-primary" })
</div>
<div class="btn btn m-3">
    @Html.ActionLink("Delete", "Delete", "Category", new { id = @Model.Id }, new { @class = "btn btn-danger" })
</div>
